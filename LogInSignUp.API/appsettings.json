{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SqlServer": "Server = (localdb)\\MSSQLLocalDB; Initial Catalog = LogInSignUp; Integrated Security = true"
  },
  "TokenSettings": {
